---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'es'}},
    {params: {lang: 'en'}}
  ];
}

// Usar el parámetro lang directamente en lugar de getLangFromUrl
const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof import('../../i18n/ui').ui);
---

<Layout title={t('pages.contact.title')}>
  <!-- Hero Section -->
  <section class="hero-professional relative overflow-hidden" transition:name="hero-section">
    <div class="hero-overlay">
      <div class="container-professional relative z-10 section-padding">
        <div class="max-w-4xl mx-auto text-center text-white">
          <div class="animate-fade-in-up">
            <div class="inline-flex items-center space-x-2 bg-white/10 backdrop-blur-sm rounded-full px-6 py-2 mb-8">
              <div class="w-2 h-2 bg-yellow-400 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium">{t('nav.contact')}</span>
            </div>
            
            <h1 class="text-5xl md:text-6xl font-bold mb-6 text-white">
              {t('pages.contact.hero')}
            </h1>
            
            <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
              {t('contact.subtitle')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="section-padding gradient-blue-subtle">
    <div class="container-professional">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div class="animate-fade-in-up">
          <div class="card-professional p-8">
            <div class="mb-8">
              <h2 class="text-3xl font-bold text-gradient-blue mb-4">{t('contact.form.title')}</h2>
              <p class="text-slate-600">Completa este formulario y nos pondremos en contacto contigo en menos de 24 horas.</p>
            </div>
            <ContactForm lang={lang} />
          </div>
        </div>

        <!-- Contact Info -->
        <div class="animate-slide-in-right">
          <div class="space-y-8">
            <div class="card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-100 text-primary rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.email')}</h3>
                  <p class="text-slate-600 mb-2">hola@cleanandcare.es</p>
                  <p class="text-sm text-slate-500">Respuesta en 24 horas</p>
                </div>
              </div>
            </div>

            <div class="card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.phone')}</h3>
                  <p class="text-slate-600 mb-2">+34 612 345 678</p>
                  <p class="text-sm text-slate-500">Lunes - Domingo, 7:00 - 22:00</p>
                </div>
              </div>
            </div>

            <div class="card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-purple-100 text-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.area')}</h3>
                  <p class="text-slate-600 mb-2">Madrid y Área Metropolitana</p>
                  <p class="text-sm text-slate-500">Radio de 30km desde el centro</p>
                </div>
              </div>
            </div>

            <div class="card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-yellow-100 text-yellow-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.hours')}</h3>
                  <p class="text-slate-600 mb-1">Lunes - Viernes: 7:00 - 22:00</p>
                  <p class="text-slate-600 mb-2">Sábado - Domingo: 8:00 - 20:00</p>
                  <p class="text-sm text-slate-500">¡Emergencias disponibles 24/7!</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-padding bg-white">
    <div class="container-professional">
      <div class="text-center mb-16">
        <div class="inline-flex items-center space-x-2 bg-blue-100 rounded-full px-4 py-2 mb-4">
          <div class="accent-dot"></div>
          <span class="text-sm font-semibold text-primary">{t('pages.contact.faq.title')}</span>
        </div>
        <h2 class="text-4xl font-bold text-gradient-blue mb-4">{t('pages.contact.faq.title')}</h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Las respuestas a las preguntas más comunes de nuestros clientes
        </p>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="card-professional p-6 hover-lift">
            <h3 class="text-lg font-bold text-gradient-blue mb-3">{t('pages.contact.faq.q1')}</h3>
            <p class="text-slate-600">{t('pages.contact.faq.a1')}</p>
          </div>
          <div class="card-professional p-6 hover-lift">
            <h3 class="text-lg font-bold text-gradient-blue mb-3">{t('pages.contact.faq.q2')}</h3>
            <p class="text-slate-600">{t('pages.contact.faq.a2')}</p>
          </div>
          <div class="card-professional p-6 hover-lift">
            <h3 class="text-lg font-bold text-gradient-blue mb-3">{t('pages.contact.faq.q3')}</h3>
            <p class="text-slate-600">{t('pages.contact.faq.a3')}</p>
          </div>
          <div class="card-professional p-6 hover-lift">
            <h3 class="text-lg font-bold text-gradient-blue mb-3">{t('pages.contact.faq.q4')}</h3>
            <p class="text-slate-600">{t('pages.contact.faq.a4')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency CTA -->
  <section class="section-padding gradient-blue-subtle">
    <div class="container-professional">
      <div class="text-center card-professional-hover p-12 bg-gradient-to-r from-red-50 to-red-100 border border-red-200">
        <div class="w-16 h-16 bg-red-500 text-white rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.268 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <h3 class="text-2xl font-bold text-red-700 mb-4">¿Tienes una Emergencia de Limpieza?</h3>
        <p class="text-red-600 mb-6 max-w-2xl mx-auto">
          Para situaciones urgentes como inundaciones, derrames grandes o limpieza post-evento, ¡estamos disponibles 24/7!
        </p>
        <a href="tel:+34612345678" class="inline-flex items-center space-x-2 bg-red-500 text-white px-8 py-3 rounded-full font-semibold hover:bg-red-600 transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>Llamar Ahora: +34 612 345 678</span>
        </a>
      </div>
    </div>
  </section>
</Layout>