---
import Layout from '../../layouts/Layout.astro';
import TitleSection from '../../components/TitleSection.astro';
import ContactForm from '../../components/ContactForm.astro';
import { useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'es'}},
    {params: {lang: 'en'}}
  ];
}

// Usar el par√°metro lang directamente en lugar de getLangFromUrl
const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof import('../../i18n/ui').ui);
---

<Layout title={t('pages.contact.title')}>

  <TitleSection  title={t('pages.contact.hero')} subtitle={t('contact.subtitle')} />

  <!-- Contact Section -->
  <section class="section-padding gradient-blue-subtle">
    <div class="container-professional">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div class="animate-fade-in-up">
          <div class="card-professional p-8">
            <div class="mb-8">
              <h2 class="text-3xl font-bold text-gradient-blue mb-4">{t('contact.form.title')}</h2>
              <p class="text-slate-600">Completa este formulario y nos pondremos en contacto contigo en menos de 24 horas.</p>
            </div>
            <ContactForm lang={lang} />
          </div>
        </div>

        <!-- Contact Info -->
        <div class="animate-slide-in-right">
          <div class="space-y-8">

            <a href="mailto:info@cleanandcare.es" class="block card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-100 text-primary rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.email')}</h3>
                  <p class="text-slate-600 mb-2">hola@cleanandcare.es</p>
                </div>
              </div>
            </a>

            <a href="tel:+34691553603" class="block card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.phone')}</h3>
                  <p class="text-slate-600 mb-2">+34 612 345 678</p>
                </div>
              </div>
            </a>

            <div class="card-professional p-8 hover-lift">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-purple-100 text-purple-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-bold text-gradient-blue mb-2">{t('contact.info.area')}</h3>
                  <p class="text-slate-600 mb-2">Ofrecemos nuestro servicios en toda la Costa del Sol. Nuestros principales clientes se ubican en las siguientes localidades.</p>
                  <ul class="text-sm text-slate-500">
                    <li>Estepona</li>
                    <li>Casares</li>
                    <li>Marbella</li>
                    <li>Puerto Banus</li>
                    <li>Sotogrande</li>
                  </ul>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>