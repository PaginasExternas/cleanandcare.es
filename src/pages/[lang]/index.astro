---
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

export function getStaticPaths() {
  return [
    {params: {lang: 'es'}},
    {params: {lang: 'en'}}
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Si acceden a la raíz, redirigir al idioma por defecto
if (Astro.url.pathname === '/') {
  return Astro.redirect('/es/');
}
---

<Layout title={t('pages.home.title')}>
  <!-- Hero Section Professional -->
  <section class="hero-professional relative overflow-hidden" transition:name="hero-section">
    <div class="hero-overlay">
      <!-- Decorative Elements -->
      <div class="absolute top-20 left-10 w-40 h-40 bg-white/5 rounded-full animate-pulse"></div>
      <div class="absolute bottom-20 right-10 w-32 h-32 bg-yellow-400/10 rounded-full animate-pulse" style="animation-delay: 1s"></div>
      
      <div class="container-professional relative z-10 section-padding">
        <div class="max-w-4xl mx-auto text-center text-white">
          <div class="animate-fade-in-up">
            <div class="inline-flex items-center space-x-2 bg-white/10 backdrop-blur-sm rounded-full px-6 py-2 mb-8">
              <div class="w-2 h-2 bg-yellow-400 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium">{t('hero.subtitle')}</span>
            </div>
            
            <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 text-white">
              {t('hero.title')}
            </h1>
            
            <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-3xl mx-auto leading-relaxed animate-delay-100">
              {t('hero.description')}
            </p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16 animate-delay-200">
              <a href={`/${lang}/contact`} class="btn-accent text-lg px-8 py-4 flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
                <span>{t('hero.cta')}</span>
              </a>
              <a href={`/${lang}/services`} class="btn-secondary text-lg px-8 py-4 bg-white/10 border-white/30 text-white hover:bg-white hover:text-blue-600">
                {t('hero.services')}
              </a>
            </div>

            <!-- Professional Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 animate-delay-300">
              <div class="stat-card-pro">
                <div class="text-4xl font-bold text-yellow-400 mb-2">500+</div>
                <div class="text-blue-200 font-medium">{t('stats.clients')}</div>
              </div>
              <div class="stat-card-pro">
                <div class="text-4xl font-bold text-yellow-400 mb-2">24/7</div>
                <div class="text-blue-200 font-medium">{t('stats.service')}</div>
              </div>
              <div class="stat-card-pro">
                <div class="text-4xl font-bold text-yellow-400 mb-2">5★</div>
                <div class="text-blue-200 font-medium">{t('stats.rating')}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview Professional -->
  <section class="section-padding gradient-blue-subtle">
    <div class="container-professional">
      <div class="text-center mb-16">
        <div class="inline-flex items-center space-x-2 bg-blue-100 rounded-full px-4 py-2 mb-4">
          <div class="accent-dot"></div>
          <span class="text-sm font-semibold text-primary">{t('services.title')}</span>
        </div>
        <h2 class="text-4xl font-bold text-gradient-blue mb-4">{t('services.title')}</h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          {t('services.subtitle')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <ServiceCard 
          title={t('services.residential.title')} 
          description={t('services.residential.description')}
          iconType="home"
          price="€25/hr"
        />
        <ServiceCard 
          title={t('services.commercial.title')} 
          description={t('services.commercial.description')}
          iconType="office"
          price="€35/hr"
        />
        <ServiceCard 
          title={t('services.deep.title')} 
          description={t('services.deep.description')}
          iconType="deep"
          price="€45/hr"
        />
      </div>
    </div>
  </section>

  <!-- Why Choose Us Professional -->
  <section class="section-padding bg-white">
    <div class="container-professional">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="animate-fade-in-up">
          <div class="inline-flex items-center space-x-2 bg-blue-100 rounded-full px-4 py-2 mb-6">
            <div class="accent-dot"></div>
            <span class="text-sm font-semibold text-primary">{t('pages.home.whyChoose')}</span>
          </div>
          <h2 class="text-4xl font-bold text-gradient-blue mb-6">
            {t('pages.home.experience')}
          </h2>
          <p class="text-lg text-slate-600 mb-8 leading-relaxed">
            {t('about.story.content')}
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900 mb-1">{t('about.values.reliable')}</h3>
                <p class="text-slate-600">Protección completa para tu tranquilidad</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900 mb-1">{t('about.values.eco')}</h3>
                <p class="text-slate-600">Seguros para tu familia y el medio ambiente</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-slate-900 mb-1">{t('about.values.fast')}</h3>
                <p class="text-slate-600">Respuesta en menos de 24 horas</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="animate-slide-in-right">
          <div class="card-professional-hover p-8 bg-gradient-to-br from-blue-50 to-blue-100">
            <div class="text-center">
              <div class="w-20 h-20 bg-primary rounded-2xl flex items-center justify-center mx-auto mb-6">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-gradient-blue mb-4">
                {t('about.mission.title')}
              </h3>
              <p class="text-slate-600 leading-relaxed">
                {t('about.mission.content')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section Professional -->
  <section class="gradient-blue relative overflow-hidden">
    <div class="hero-overlay section-padding">
      <div class="container-professional text-center relative z-10">
        <h3 class="text-4xl font-bold text-white mb-6">{t('cta.title')}</h3>
        <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
          {t('cta.description')}
        </p>
        <a href={`/${lang}/contact`} class="btn-accent text-lg px-10 py-4 inline-flex items-center space-x-2">
          <span>{t('cta.button')}</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>