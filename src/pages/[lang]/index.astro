import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/ui';
import clientsData from '../../i18n/clients.json';

export function getStaticPaths() {
  return [
    {params: {lang: 'es'}},
    {params: {lang: 'en'}}
  ];
}

// Usar el parámetro lang directamente en lugar de getLangFromUrl
const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof import('../../i18n/ui').ui);

// Obtener la base URL para GitHub Pages
const baseUrl = import.meta.env.BASE_URL;

// Si acceden a la raíz, redirigir al idioma por defecto
if (Astro.url.pathname === '/') {
  return Astro.redirect('/es/');
}
