---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { getLangFromUrl } from '../i18n/ui';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
}

const { title } = Astro.props;
const lang = getLangFromUrl(Astro.url);

// Obtener la base URL para GitHub Pages
const baseUrl = import.meta.env.BASE_URL;
const siteUrl = import.meta.env.SITE || 'https://paginasexternas.github.io';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Clean & Care - Servicio profesional de limpieza para hogares y oficinas en Madrid" />
    <title>{title}</title>
    <link rel="canonical" href={`${siteUrl}${baseUrl}${lang}/`} />
    <link rel="alternate" hreflang="es" href={`${siteUrl}${baseUrl}es/`} />
    <link rel="alternate" hreflang="en" href={`${siteUrl}${baseUrl}en/`} />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <ViewTransitions />
  </head>
  <body class="bg-slate-50">
    <div class="flex flex-col min-h-screen">
      <Header lang={lang} />
      <main class="flex-grow transition-opacity duration-300 ease-out" transition:name="main-content">
        <slot />
      </main>
      <Footer lang={lang} />
    </div>
  </body>
</html>