---
import { useTranslations } from '../i18n/ui';

// Recibir el idioma como prop desde el Layout
export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as keyof typeof import('../i18n/ui').ui);

// Obtener la base URL para GitHub Pages
const baseUrl = import.meta.env.BASE_URL;
---

<footer class="footer-professional text-white relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-0 w-32 h-32 bg-white/5 rounded-full -translate-x-16 -translate-y-16"></div>
  <div class="absolute bottom-0 right-0 w-24 h-24 bg-white/5 rounded-full translate-x-12 translate-y-12"></div>
  
  <div class="container-professional relative z-10 section-padding">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="col-span-1 sm:col-span-2 lg:col-span-2">
        <div class="flex flex-col sm:flex-row sm:items-center space-y-4 sm:space-y-0 sm:space-x-4 mb-6">
          <div class="w-12 h-12 bg-white/10 rounded-lg flex items-center justify-center backdrop-blur-sm flex-shrink-0">
            <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl sm:text-2xl font-bold text-white">{t('hero.title')}</h3>
            <p class="text-gray-400 text-sm">{t('hero.subtitle')}</p>
          </div>
        </div>
        <p class="text-blue-100 mb-6 leading-relaxed text-sm sm:text-base">
          {t('footer.description')}
        </p>
        
        <!-- Social Media -->
        <div class="flex space-x-3">
          <a href="#" class="w-10 h-10 bg-white/10 hover:bg-white/20 rounded-lg flex items-center justify-center transition-colors duration-300">
