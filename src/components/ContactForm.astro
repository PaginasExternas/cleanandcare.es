---
import { useTranslations } from '../i18n/ui';

// Recibir el idioma como prop desde la página padre
export interface Props {
  lang: string;
}

const { lang } = Astro.props;
const t = useTranslations(lang as keyof typeof import('../i18n/ui').ui);
---

<div class="max-w-2xl mx-auto">
  <form class="card-professional-hover p-8 form-professional">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gradient-blue mb-2">{t('contact.form.title')}</h2>
      <p class="text-slate-600">Te responderemos en menos de 24 horas con tu cotización personalizada</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <label for="name">{t('contact.form.name')} *</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required 
          placeholder="Juan Pérez"
        />
      </div>
      
      <div>
        <label for="phone">{t('contact.form.phone')}</label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          placeholder="+34 123 456 789"
        />
      </div>
    </div>

    <div class="mb-6">
      <label for="email">{t('contact.form.email')} *</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        required 
        placeholder="juan@ejemplo.com"
      />
    </div>

    <div class="mb-6">
      <label for="service">{t('contact.form.service')}</label>
      <select id="service" name="service">
        <option value="">Selecciona un servicio...</option>
        <option value="residential">🏠 Limpieza Residencial</option>
        <option value="commercial">🏢 Limpieza Comercial</option>
        <option value="deep">✨ Limpieza Profunda</option>
        <option value="move">📦 Limpieza de Mudanzas</option>
        <option value="construction">🔨 Post-Construcción</option>
        <option value="window">🪟 Limpieza de Ventanas</option>
        <option value="carpet">🛋️ Alfombras y Tapicería</option>
        <option value="eco">🌱 Limpieza Ecológica</option>
        <option value="emergency">🚨 Limpieza de Emergencia</option>
      </select>
    </div>

    <div class="mb-6">
      <label for="message">{t('contact.form.message')}</label>
      <textarea 
        id="message" 
        name="message" 
        rows="4" 
        placeholder="Describe el tamaño de tu espacio, áreas específicas que necesitan atención, horarios preferidos, etc."
      ></textarea>
    </div>

    <div class="mb-6">
      <label class="flex items-center space-x-3 cursor-pointer">
        <input type="checkbox" class="w-5 h-5 text-primary border-2 border-slate-300 rounded focus:ring-primary">
        <span class="text-sm text-slate-600">
          Acepto recibir actualizaciones y mensajes promocionales por email
        </span>
      </label>
    </div>

    <button type="submit" class="w-full btn-primary text-lg py-4 flex items-center justify-center space-x-2">
      <span>{t('contact.form.submit')}</span>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
      </svg>
    </button>

    <p class="text-center text-sm text-slate-500 mt-4">
      ⚡ Respuesta garantizada en 24 horas
    </p>
  </form>
</div>