---
import { getLangFromUrl, useTranslations } from '../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Obtener la ruta actual sin el idioma para mantener la página al cambiar idioma
const currentPath = Astro.url.pathname.replace(/^\/(es|en)/, '') || '/';

// Función para determinar si un enlace está activo
function isActive(path: string): boolean {
  const normalizedCurrentPath = currentPath === '/' ? '/' : currentPath.replace(/\/$/, '');
  const normalizedPath = path === '/' ? '/' : path.replace(/\/$/, '');
  return normalizedCurrentPath === normalizedPath;
}
---

<header class="sticky top-0 left-0 w-full z-50 header-professional" transition:name="header-section">
  <!-- Mobile Menu Checkbox -->
  <input type="checkbox" id="mobile-menu-toggle" class="hidden" />
  
  <div class="container-professional">
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center">
      <!-- Top row: Logo and Mobile Menu Toggle -->
      <div class="flex justify-between items-center p-4">
        <!-- Logo Professional -->
        <a href={`/${lang}/`} class="flex items-center space-x-3">
          <div class="w-10 h-10 bg-primary rounded-lg flex items-center justify-center shadow-md">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
            </svg>
          </div>
          <div>
            <h1 class="text-xl font-bold text-slate-900">{t('hero.title')}</h1>
            <p class="text-xs text-gray-400 font-medium">{t('hero.subtitle')}</p>
          </div>
        </a>

        <!-- Mobile Menu Toggle -->
        <label for="mobile-menu-toggle" class="lg:hidden p-2 rounded-lg hover:bg-slate-100 transition-colors cursor-pointer">
          <div class="w-6 h-6 text-slate-700">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
          </div>
        </label>
      </div>

      <!-- Unified Navigation Menu -->
      <div class="unified-menu bg-white border-t border-slate-200 shadow-lg lg:shadow-none lg:border-t-0 lg:bg-transparent lg:flex lg:items-center lg:space-x-8">
        <!-- Main Navigation -->
        <nav class="py-4 space-y-2 lg:flex lg:space-y-0 lg:space-x-8 lg:py-0">
          <a href={`/${lang}/`} class={`nav-link group ${isActive('/') ? 'nav-link-active' : ''}`}>
            {t('nav.home')}
            <span class={`nav-underline ${isActive('/') ? 'nav-underline-active' : ''}`}></span>
          </a>
          <a href={`/${lang}/services`} class={`nav-link group ${isActive('/services') ? 'nav-link-active' : ''}`}>
            {t('nav.services')}
            <span class={`nav-underline ${isActive('/services') ? 'nav-underline-active' : ''}`}></span>
          </a>
          <a href={`/${lang}/about`} class={`nav-link group ${isActive('/about') ? 'nav-link-active' : ''}`}>
            {t('nav.about')}
            <span class={`nav-underline ${isActive('/about') ? 'nav-underline-active' : ''}`}></span>
          </a>
          <a href={`/${lang}/contact`} class={`nav-link group ${isActive('/contact') ? 'nav-link-active' : ''}`}>
            {t('nav.contact')}
            <span class={`nav-underline ${isActive('/contact') ? 'nav-underline-active' : ''}`}></span>
          </a>
        </nav>

        <!-- Language Selector -->
        <div class="px-4 py-3 border-t border-slate-200 lg:border-t-0 lg:px-0 lg:py-0">
          <p class="text-sm font-medium text-slate-600 mb-2 lg:hidden">Idioma / Language</p>
          <div class="flex items-center space-x-2">
            <a href={`/es${currentPath}`} class={`lang-selector flex items-center space-x-1.5 ${lang === 'es' ? 'bg-blue-100 text-primary' : ''}`} onclick="localStorage.setItem('preferred-language', 'es')">
              <svg class="w-4 h-3" viewBox="0 0 20 15" fill="none">
                <rect width="20" height="15" fill="#C60B1E"/>
                <rect y="3.75" width="20" height="7.5" fill="#FFC400"/>
              </svg>
              <span>ES</span>
            </a>
            <a href={`/en${currentPath}`} class={`lang-selector flex items-center space-x-1.5 ${lang === 'en' ? 'bg-blue-100 text-primary' : ''}`} onclick="localStorage.setItem('preferred-language', 'en')">
              <svg class="w-4 h-3" viewBox="0 0 20 15" fill="none">
                <defs>
                  <pattern id="stars" patternUnits="userSpaceOnUse" width="2" height="2">
                    <rect width="2" height="2" fill="#002868"/>
                    <circle cx="1" cy="1" r="0.25" fill="white"/>
                  </pattern>
                </defs>
                <rect width="20" height="15" fill="#BF0A30"/>
                <rect y="1.15" width="20" height="1.15" fill="white"/>
                <rect y="3.46" width="20" height="1.15" fill="white"/>
                <rect y="5.77" width="20" height="1.15" fill="white"/>
                <rect y="8.08" width="20" height="1.15" fill="white"/>
                <rect y="10.38" width="20" height="1.15" fill="white"/>
                <rect y="12.69" width="20" height="1.15" fill="white"/>
                <rect width="8" height="8.08" fill="#002868"/>
                <rect width="8" height="8.08" fill="url(#stars)"/>
              </svg>
              <span>EN</span>
            </a>
          </div>
        </div>

        <!-- CTA Button -->
        <div class="px-4 py-3 border-t border-slate-200 lg:border-t-0 lg:px-0 lg:py-0">
          <a href={`/${lang}/contact`} class="btn-accent w-full lg:w-auto flex items-center justify-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <span>{t('nav.getQuote')}</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  /* === UNIFIED HEADER STYLES === */
  
  /* Language selector */
  .lang-selector {
    @apply px-3 py-1 rounded-md text-sm font-medium transition-colors duration-200 hover:bg-slate-100;
  }

  .lang-selector.bg-blue-100 {
    @apply text-primary border border-blue-200 shadow-sm;
  }

  /* Navigation links */
  .nav-link {
    @apply block px-4 py-3 lg:px-0 lg:py-2 text-slate-700 hover:text-primary hover:bg-slate-50 lg:hover:bg-transparent font-medium transition-colors duration-200 relative;
  }

  .nav-underline {
    @apply hidden lg:block absolute -bottom-1 left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full;
  }

  /* Active navigation link */
  .nav-link-active {
    @apply text-primary;
  }

  .nav-underline-active {
    @apply w-full;
  }

  /* Hamburger icon and unified menu behavior */
  .hamburger-line {
    display: block;
    width: 24px;
    height: 2px;
    background-color: currentColor;
    margin-bottom: 6px;
    transition: all 0.3s ease-in-out;
  }
  .hamburger-line:last-child { margin-bottom: 0; }

  .unified-menu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-in-out;
  }

  /* Responsive behavior and interactions */
  @media (min-width: 1024px) {
    .unified-menu {
      max-height: none;
      overflow: visible;
    }
  }

  #mobile-menu-toggle:checked ~ div .unified-menu { max-height: 500px; }
  #mobile-menu-toggle:checked ~ div label .hamburger-line:nth-child(1) { transform: rotate(45deg) translate(5px, 5px); }
  #mobile-menu-toggle:checked ~ div label .hamburger-line:nth-child(2) { opacity: 0; }
  #mobile-menu-toggle:checked ~ div label .hamburger-line:nth-child(3) { transform: rotate(-45deg) translate(7px, -6px); }
</style>